{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "lib": ["dom", "es5", "es6"],
    "allowJs": true,
    "jsx": "react",
    "outDir": "./build",
    "strict": true,
    "moduleResolution": "node",
    "rootDir": "src",
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "noImplicitAny": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"]
}
